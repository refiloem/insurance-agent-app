<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Certificate No: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/certNoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123454" />
        </LinearLayout>

        <TextView
            android:id="@+id/clientTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Client"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/insuranceCompanyTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Insurance Company"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Effective date:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/effectiveDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/12/2018" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Expiry date:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/expiryDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/12/2018" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Vehicle Number"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vehicleRegNoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="KCA 123R" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:alpha="0.3"
            android:background="#000" />


    </LinearLayout>
</FrameLayout>