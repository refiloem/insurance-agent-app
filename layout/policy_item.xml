<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/clickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectedbackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clientpolicyTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Client"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Risk:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/riskpolicyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Risk" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Insured Object:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/insuredObjectpolicyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some Object" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Insurance Company:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/insurancepolicyCompanyTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Some Company" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Expiry date:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/expirypolicyDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/12/2018" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Effective date:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/effectivepolicyDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/12/2018" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Premium: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/premiumpolicyTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ksh 700" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Commision: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/commisionpolicyTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ksh 50" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Admin fee: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/adminFeepolicyTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ksh 100" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:alpha="0.3"
            android:background="#000" />


    </LinearLayout>

</FrameLayout>