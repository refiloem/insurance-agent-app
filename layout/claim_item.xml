<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/clickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectedbackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/claimcustomerTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Customer"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Policy"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/claimpolicyTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="Policy" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Risk:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/claimriskTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Risk" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Details:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/claimdetailsTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Details" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Sum Insured:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/claimsumInsuredTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Risk" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Effective date:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/claimeffectiveDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="12/12/2018" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Expiry date:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/claimexpiryDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="12/12/2018" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Premium:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/claimpremiumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Risk" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Date Reported:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/claimdateReportedTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Risk" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Details Claim:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailsClaimTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Risk" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Other Party:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/claimotherPartyTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Risk" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Contacts:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/claimcontactsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Risk" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Police station:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/claimpoliceStationTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="OB Number" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Ob Number:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/claimobNumberTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="OB Number" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Towing Car:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/claimtowingCarTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Towing Car" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Yard:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/claimyardTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Yard" />
            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:alpha="0.3"
            android:background="#000" />

    </LinearLayout>
</FrameLayout>