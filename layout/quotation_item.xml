<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/clickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectedbackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">


        <TextView
            android:id="@+id/clientTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Client"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Product: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some product" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statusTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Quote No: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quoteNoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123454" />
        </LinearLayout>


        <LinearLayout

            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Insured Object: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/insuredObjectTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Some Object" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Details: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Some details" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Premium: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/premiumTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ksh 800" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Underwriter"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/underwriterTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Underwriter" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Sum Insured:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sumInsuredTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ksh 800" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Expiry date:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/expiryDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/12/2018" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Effective date:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/effectiveDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/12/2018" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:alpha="0.3"
            android:background="#000" />


    </LinearLayout>
</FrameLayout>